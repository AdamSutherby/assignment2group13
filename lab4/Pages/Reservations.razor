        <label>Airline: </label>
        <input placeholder="Airline" />
    </div>
    <div class="flex-column reserveReservations">
        <label>Cost: </label>
        <input placeholder="0" />
    </div>
    <div class="flex-column reserveReservations">
        <label>Name: </label>
        <input placeholder="Name" />
    </div>
    <div class="flex-column reserveReservations">
        <label>Citizenship: </label>
        <input placeholder="Citizenship" />
    </div>
    <div class="flex-column reserveReservations">
        <label>Status: </label>
        <input placeholder="Active" />
    </div>
    <button>Save</button>
</form>
