        <input placeholder="Any" type="text" id="code" />
    </div>
    <div class="flex-column findReservations">
        <label for="airline">Airline: </label>
        <input placeholder="Any" type="text" id="airline" />
    </div>
    <div class="flex-column findReservations">
        <label for="name">Name: </label>
        <input placeholder="Any" type="text" id="name" />
